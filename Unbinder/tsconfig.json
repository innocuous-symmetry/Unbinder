{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": ["ES2015", "DOM"],
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "outDir": "wwwroot/js"
  },
  "include": [
    "wwwroot/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/js"
  ]
}
